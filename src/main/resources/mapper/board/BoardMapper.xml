<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohoraming.springmybatis.mapper.BoardMapper">
    <select id="getBoardList"  resultType="com.ohoraming.springmybatis.domain.Board">
        SELECT
            id,
            title,
            file,
            likeCount
        FROM
            board
    </select>
    <select id="getBoard" resultType="com.ohoraming.springmybatis.domain.Board">
        SELECT
            id,
            title,
            file,
            likeCount
        FROM
            board
        WHERE
            id=#{id}
    </select>
    <insert id="insertBoard">
        INSERT INTO
            board(title, file)
        VALUES
            (#{title}, #{file})
    </insert>
    <update id="updateBoard">
        UPDATE
            board
        SET
            title=#{title}, file=#{file}
        WHERE
            id=#{id}
    </update>
    <delete id="deleteBoard">
        DELETE
            FROM board
        WHERE
            id=#{id}
    </delete>
</mapper>